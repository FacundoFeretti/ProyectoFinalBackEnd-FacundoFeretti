{{#if isValid}}
    <div>
        {{#each docs}}
            <div>
                <p>Product: {{this.title}} &nbsp; {{this.description}}</p>
                <p>Categoria: {{this.category}} &nbsp; Precio: {{this.price}}</p>
                <button>Agregar al carrito</button>
            </div>
        {{/each}}
    </div>
    <br/>
    <div>
        {{#if hasPrevPage}}
            <a href={{this.prevLink}}>Anterior </a>
        {{/if}}
        &nbsp;
        {{this.page}}
        &nbsp;
        {{#if hasNextPage}}
            <a href={{this.nextLink}}> Siguiente</a>
        {{/if}}
    </div>
    {{else}}
    <h1>No hay productos para mostrar</h1>
{{/if}}